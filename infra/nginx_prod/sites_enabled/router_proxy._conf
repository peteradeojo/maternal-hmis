# Router specific configuration for MTNHynetFlex ZTE on a network switch
server {
    listen 4410;

    location / {
        proxy_pass http://192.168.0.1/;
        proxy_http_version 1.1;

        # Standard Headers
        proxy_set_header Host 192.168.0.1;
        proxy_set_header Referer http://192.168.0.1/;
        proxy_set_header Origin http://192.168.0.1;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # CRITICAL: Rewrite redirects from the router
        proxy_redirect http://192.168.0.1/ http://$host:4410/;

        # Cookie management
        proxy_cookie_domain 192.168.0.1 $host;
        proxy_cookie_path / /;

        proxy_buffering off;
    }
}
