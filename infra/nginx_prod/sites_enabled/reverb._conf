server {
    listen 8080;
    listen [::]:8080;
    listen 443 ssl;

    server_name 192.168.0.171 100.114.76.111 reverb.lan reverb.maternalchildhosp.com;

    ssl_certificate /etc/nginx/ssl/reverb.lan+2.pem;
    ssl_certificate_key /etc/nginx/ssl/reverb.lan+2-key.pem;

    location / {
        proxy_pass http://127.0.0.1:8081;
        proxy_http_version 1.1;

        # Websocket headers
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $http_connection;

        # Forwarding headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Port $server_port;

        # Timeouts for long-lived websocket connections
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
        proxy_connect_timeout 60;

        # Prevent buffering to reduce latency
        proxy_buffering off;
    }
}

